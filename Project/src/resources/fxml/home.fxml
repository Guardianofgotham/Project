<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #2D3447;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HomeController">
   <children>
      <VBox alignment="CENTER" prefHeight="800.0" prefWidth="250.0" spacing="20.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXButton fx:id="home" onMouseClicked="#homePressed" prefHeight="37.0" prefWidth="133.0" text="Home" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="my_account" onMouseClicked="#my_accountPressed" prefHeight="37.0" prefWidth="133.0" text="My Account" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="profile" onMouseClicked="#profilePressed" prefHeight="37.0" prefWidth="133.0" text="Profile" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="wallet" onMouseClicked="#walletPressed" prefHeight="37.0" prefWidth="133.0" text="Wallet" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="wishlist" onMouseClicked="#wishlistPressed" prefHeight="37.0" prefWidth="133.0" text="Wishlist" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
            <JFXButton fx:id="logout" onMouseClicked="#logoutPressed" prefHeight="37.0" prefWidth="133.0" text="Logout" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </JFXButton>
         </children>
      </VBox>
      <HBox alignment="CENTER_LEFT" layoutX="250.0" layoutY="7.0" prefHeight="50.0" prefWidth="950.0" spacing="15.0">
         <children>
            <FontAwesomeIconView fx:id="search_icon" fill="WHITE" glyphName="SEARCH" onMouseClicked="#search_iconPressed" size="18" />
            <JFXTextField fx:id="search_bar" focusColor="WHITE" onMouseClicked="#search_barPressed" prefHeight="29.0" prefWidth="509.0" promptText="Search" style="-fx-prompt-text-fill: WHITE; -fx-text-fill: WHITE;" unFocusColor="#b5b5b5" />
            <JFXButton fx:id="advanced_search" onMouseClicked="#advanced_searchPressed" text="Advanced Search" textFill="#e6e0e0" />
            <JFXButton fx:id="go_to_cart" onMouseClicked="#go_to_cartPressed" text="Go to cart" textFill="#e6e0e0" />
            <FontAwesomeIconView fx:id="user_icon" fill="#acacac" glyphName="USER" onMouseClicked="#user_iconPressed" size="30" />
         </children>
      </HBox>
      <TableView fx:id="table" layoutX="250.0" layoutY="104.0" onMouseClicked="#tablePressed" prefHeight="652.0" prefWidth="922.0">
        <columns>
          <TableColumn prefWidth="67.0" text="Book id" />
          <TableColumn prefWidth="107.0" text="Name" />
            <TableColumn prefWidth="144.0" text="Author" />
            <TableColumn prefWidth="57.0" text="Year" />
            <TableColumn minWidth="0.0" prefWidth="84.0" text="Genre" />
            <TableColumn prefWidth="138.0" text="Number Of Pages" />
            <TableColumn prefWidth="141.0" text="Number Of Copies" />
            <TableColumn minWidth="7.0" prefWidth="109.0" text="Language" />
            <TableColumn prefWidth="74.0" text="Price" />
        </columns>
      </TableView>
   </children>
</AnchorPane>
